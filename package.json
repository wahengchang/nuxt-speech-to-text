{
  "name": "nuxt-speech-to-text",
  "version": "1.0.0",
  "description": "This is a free online speech-to-text converter. A browser base online tool, allowing Windows, iOS, Android, whatever devices supporting browser.",
  "author": "wahengchang",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "heroku-postbuild": "npm run build",
    "kill:3000": "kill $(lsof -t -i:3000)"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^3.0.0",
    "axios": "^0.21.1",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "nuxt": "^2.0.0",
    "sitemap": "^5.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
